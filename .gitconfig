[include]
	# include local configuration
	path = ~/.gitconfig.local

[core]
	excludesfile = ~/.gitignore_global
	ignoreCase = false

[alias]
	# short log
	sl = log --oneline
	# short status
	ss = status -sb
	# diff staged
	sdiff = diff --cached
	# graph log
	graph = log --graph --oneline --decorate
	# amend latest commit
	amend = commit --amend --no-edit
	# search for a commit
	search = log --all -i --grep

[color]
	ui = true

[push]
	default = matching

[gui]
	commitmsgwidth = 78

